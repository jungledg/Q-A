  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  	 android:layout_width="match_parent"
    android:layout_height="match_parent" 
	android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#A8A8A8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <ImageView
        android:id="@+id/Forth_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/background14" />

    <Button
        android:id="@+id/Forth_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Forth_imageView"
        android:text="老师" />

    <TextView
        android:id="@+id/Forth_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Forth_teacher"
        android:textSize="18sp"
        android:text="时间:" />

    <TextView
        android:id="@+id/Forth_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Forth_time"
         android:textSize="18sp"
        android:text="地点:" />

    <TextView
        android:id="@+id/Forth_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Forth_place"
         android:textSize="18sp"
        android:text="已排人数:" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Forth_num"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Forth_teacher"
        android:onClick="startBtnClicked"
        android:text="排" />

    <com.example.question.LoadingButton
        android:id="@+id/lbtn_default"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Forth_num"
        android:layout_centerHorizontal="true" />
    								
</RelativeLayout>
    
    
    
